<p id="notice"><%= notice %></p>

<h1>Listing Notes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.sort_by(&:updated_at).reverse!.first(3).each do |note| %>
      <tr>
        <td><%= link_to note.title, note %></td>
        <td></td>
        <td><%= note.body %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Note', new_note_path %>
